<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHint">@color/trans_white_xsmall</item>

        <item name="colorControlNormal">@color/trans_white_small</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColorPrimary">@color/trans_white_small</item>
        <item name="android:textColorSecondary">@color/trans_white_medium</item>
        <item name="actionMenuTextColor">@color/trans_white_medium</item>
    </style>

    <style name="AppTheme.AppBar">
        <item name="android:background">@color/colorToolbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
